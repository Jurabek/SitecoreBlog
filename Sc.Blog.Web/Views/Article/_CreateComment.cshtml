@model Sc.Blog.Model.ViewModels.CommentViewModel
<div class="well">
    <h4>Leave a Comment:</h4>
    @using (Html.BeginForm())
    {
        @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control", style = "min-width:500px; min-height:200px" } })
        <button type="button" id="saveCommentButton" class="btn btn-primary">
            <span class="glyphicon glyphicon-refresh glyphicon-refresh-animate" style="display:none;" id="loading"></span>
            Submit
        </button>
    }
</div>